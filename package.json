{
	"name": "zwap",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"next": "16.0.0",
			"zod": "^4.1.12",
			"@trpc/server": "^11.5.0",
			"@trpc/client": "^11.5.0",
			"dotenv": "^17.2.2"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @zwap/db db:push",
		"db:studio": "turbo -F @zwap/db db:studio",
		"db:generate": "turbo -F @zwap/db db:generate",
		"db:migrate": "turbo -F @zwap/db db:migrate",
		"relayer": "cd packages/api && bun run src/scripts/start-relayer.ts",
		"verify": "bun run scripts/verify-deployment.ts",
		"setup": "bun run setup.sh",
		"setup:windows": "powershell -ExecutionPolicy Bypass -File setup.ps1"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^22.13.11"
	},
	"packageManager": "bun@1.2.23"
}